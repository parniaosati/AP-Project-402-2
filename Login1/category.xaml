<Window x:Class="Login1.category"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Categories" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="lblPanelTitle" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <ListBox x:Name="CategoryListBox" Grid.Row="1" Margin="0,0,0,10" SelectionMode="Single"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Add Category" Width="100" Margin="10" Click="AddCategoryButton_Click"/>
            <Button Content="Remove Category" Width="100" Margin="10" Click="RemoveCategoryButton_Click"/>
            <Button Content="Add Menu Item" Width="100" Margin="10" Click="AddMenuItemButton_Click"/>
            <Button Content="Back to Panel" Width="100" Margin="10" Click="BackToPanelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
