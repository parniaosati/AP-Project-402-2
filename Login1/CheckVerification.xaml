<Window x:Class="Login1.CheckVerification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login1"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="300">
    <Window.Background>
        <ImageBrush ImageSource="image/aks.png"/>
    </Window.Background>
    <StackPanel Margin="20,20,20,-20" Width="196.7" Height="200">
        <Label Content="Verification" Foreground="Black" FontSize="25" HorizontalAlignment="Center" Height="44" Margin="28,0,9.8,0" Width="159"/>
        <Separator></Separator>
        <Label Content="Enter Your VerificationCode:" Foreground="Black" Margin="0,10,0,0"/>
        <TextBox x:Name ="VerificationCode" Background="White" Foreground="#545d6a" FontSize="18"/>
        <Button Name="submit"  Content="Submit" Margin="60,-30,60,-80" Background="#545d6a" Foreground="White" FontSize="10" Width="76" Height="20" Click="btnSubmit_Click"/>
    </StackPanel>
</Window>
