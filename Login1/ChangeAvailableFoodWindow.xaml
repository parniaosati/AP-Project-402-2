<Window x:Class="Login1.ChangeAvailableFoodWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Available Food" Height="300" Width="400" Background="#FFF8F1E1">
    <Grid Margin="10">
        <Border Margin="10" Background="#FFE3A869" Padding="10" BorderBrush="#FF8B4513" BorderThickness="2">
            <StackPanel>
                <TextBlock Text="Select Category:" Margin="0,0,0,10" Foreground="#8B4513"/>
                <ComboBox x:Name="CategoryComboBox" Width="300" SelectionChanged="CategoryComboBox_SelectionChanged" Margin="0,0,0,10" Background="#FFF8F1E1" BorderBrush="#FF8B4513"/>

                <TextBlock Text="Select Item:" Margin="0,10,0,10" Foreground="#8B4513"/>
                <ComboBox x:Name="ItemComboBox" Width="300" SelectionChanged="ItemComboBox_SelectionChanged" Margin="0,0,0,10" Background="#FFF8F1E1" BorderBrush="#FF8B4513"/>

                <TextBlock Text="New Available Quantity:" Margin="0,10,0,10" Foreground="#8B4513"/>
                <TextBox x:Name="QuantityTextBox" Width="300" Margin="0,0,0,10" Background="#FFF8F1E1" BorderBrush="#FF8B4513"/>

                <Button Content="Update Quantity" Width="150" Click="UpdateQuantityButton_Click" HorizontalAlignment="Center" Background="#FFE3A869" Foreground="#8B4513" BorderBrush="#FF8B4513"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
