<Window x:Class="Login1.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login1"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="300">
    <Window.Background>
        <ImageBrush ImageSource="image/aks.png"/>
    </Window.Background>
    <StackPanel Margin="20,20,20,-10" Width="196.7" Height="249">
        <Label Content="login" Foreground="Black" FontSize="25" HorizontalAlignment="Center"/>
        <Separator></Separator>
        <Label Content="Username" Foreground="Black"/>
        <TextBox Name="txtUsername" Background="White" Foreground="#545d6a" FontSize="18"/>
        <Label Content="Password" Foreground="black"/>
        <PasswordBox Name="txtPassword" Background="White" Foreground="#545d6a" FontSize="18"/>
        <Button Name="btnSubmit"  Content="Submit" Margin="60 20" Background="#545d6a" Foreground="White" FontSize="18" Click="btnSubmit_clicked"/>
        <Button Name="register"  Content="Register" Margin="60 -50" Background="#545d6a" Foreground="White" FontSize="10" Width="76" Height="20" Click="register_clicked"/>
    </StackPanel>

</Window>
