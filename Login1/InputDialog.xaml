<Window x:Class="Login1.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input Dialog" Height="150" Width="400" Background="#FFF8F1E1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="10" Background="#FFE3A869" Padding="10" BorderBrush="#FF8B4513" BorderThickness="2">
            <TextBlock Text="Enter new category name:" Foreground="#8B4513"/>
        </Border>
        <Border Grid.Row="1" Margin="10" Background="#FFF8F1E1" BorderBrush="#FF8B4513" BorderThickness="2">
            <TextBox x:Name="InputTextBox" Background="#FFF8F1E1" BorderBrush="#FF8B4513" Foreground="#8B4513"/>
        </Border>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="OK" Width="75" Click="OkButton_Click" Background="#FFE3A869" Foreground="#8B4513" BorderBrush="#FF8B4513"/>
            <Button Content="Cancel" Width="75" Click="CancelButton_Click" Background="#FFE3A869" Foreground="#8B4513" BorderBrush="#FF8B4513" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
